<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mahdi_000.homework1.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:height="80dp"
        android:width="64dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:background="@android:drawable/btn_default" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A2"
        android:height="80dp"
        android:width="64dp"
        android:layout_above="@+id/B2"
        android:layout_alignLeft="@+id/B2"
        android:layout_alignStart="@+id/B2"
        android:background="@android:drawable/btn_default" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A1"
        android:height="80dp"
        android:width="64dp"
        android:layout_alignBottom="@+id/A2"
        android:layout_toLeftOf="@+id/A2"
        android:layout_toStartOf="@+id/A2"

        android:background="@android:drawable/btn_default" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C3"
        android:height="80dp"
        android:width="64dp"
        android:layout_below="@+id/B2"
        android:layout_toRightOf="@+id/B2"
        android:layout_toEndOf="@+id/B2"
        android:background="@android:drawable/btn_default" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A3"
        android:height="80dp"
        android:width="64dp"
        android:layout_alignTop="@+id/A2"
        android:layout_toRightOf="@+id/A2"
        android:layout_toEndOf="@+id/A2"
        android:background="@android:drawable/btn_default" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B3"
        android:height="80dp"
        android:width="64dp"
        android:layout_above="@+id/C3"
        android:layout_toRightOf="@+id/B2"
        android:layout_toEndOf="@+id/B2"
        android:background="@android:drawable/btn_default" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B1"
        android:height="80dp"
        android:width="64dp"
        android:layout_below="@+id/A1"
        android:layout_alignRight="@+id/A1"
        android:layout_alignEnd="@+id/A1"
        android:background="@android:drawable/btn_default" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C2"
        android:height="80dp"
        android:width="64dp"
        android:layout_below="@+id/B2"
        android:layout_toLeftOf="@+id/C3"
        android:layout_toStartOf="@+id/C3"
        android:background="@android:drawable/btn_default" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C1"
        android:height="80dp"
        android:width="64dp"
        android:layout_below="@+id/B1"
        android:layout_alignRight="@+id/B1"
        android:layout_alignEnd="@+id/B1"
        android:background="@android:drawable/btn_default" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/New_Game"
        android:id="@+id/NewGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/Sky_Blue" />

</RelativeLayout>
